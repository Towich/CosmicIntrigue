<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/WRoomFragment"
        android:name="com.towich.cosmicintrigue.ui.fragment.WRoomFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_wroom">
        <action
            android:id="@+id/action_WRoomFragment_to_gameActivity"
            app:destination="@id/gameActivity" />
        <action
            android:id="@+id/action_menu_to_game"
            app:destination="@id/nav_graphgame" />

    </fragment>
    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.towich.cosmicintrigue.ui.fragment.LoginFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_LoginFragment_to_WRoomFragment2"
            app:destination="@id/WRoomFragment" />
    </fragment>
    <activity
        android:id="@+id/gameActivity"
        android:name="com.towich.cosmicintrigue.ui.activity.GameActivity"
        android:label="activity_maps"
        tools:layout="@layout/activity_maps" />

